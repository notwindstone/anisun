{
  "name": "anisun",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "concurrently \"next build\" \"bun backend:build\"",
    "start": "concurrently \"next start\" \"bun backend:start\"",
    "push": "bunx drizzle-kit push",
    "lint": "concurrently --raw \"bun lint:eslint\" \"bun lint:ts\"",
    "lint:eslint": "next lint",
    "lint:ts": "tsc",
    "backend:build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./build/server backend/elysia/index.ts",
    "backend:start": "./build/server"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.2.0",
    "elysia": "^1.2.25",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-unicorn": "^58.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
